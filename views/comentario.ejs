<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/home.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body class=" blue-grey darken-3">
    <div class="container divLogin">
      <div class="row divLoginCaixa z-depth-3">
        <div class=" col s12">
          <form action="/postar" method="POST" class="col s12">

            <div class="row">
              <div class="input-field col s12">
                <h6>USUÁRIO</h6>
                <input id="usuario" name="usuario" type="text" class="validate">
               
                
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <h6>COMENTÁRIO:</h6>
                <textarea  rows="5" cols="33" class="form-control" name="comentario" id="comentario"></textarea>
               
              </div>
            </div>
            
        </div>
        <div class="row btMenu ">
          <div class="col s6 ">
            <div class="container">
              <button class="waves-effect btExtra  btn"><i class="material-icons left"></i>Enviar</button>
              <input type="submit" value="Enviar" />
            </div>
          </div> </form>
         </div>
      </div>
     
    </div>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
  </body>
</html>